@* @model Microsoft.EntityFrameworkCore.DbLoggerCategory.Model *@
@model List<User>
@{
}
<!DOCTYPE html>

<html>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">User</h1>
        </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-controller="Users" asp-action="Login">
            <i class="bi bi-journal-plus"></i> Create</a>
        <form class="d-flex ">
            <input class="form-control me-sm-2" type="search" placeholder="Search user with name or email"
                   value="@ViewData["Getuserdata"]" name="search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit" value="search">Search</button>
            <a asp-action="Index">Get all users</a>
        </form>
    </div>
</div>
    <br />
    <body>
    <div>
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            email
                        </th>
                        <th>
                            password
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            @* <td width="20%"> *@
                            @*     @obj.Id *@
                            @* </td> *@
                            <td width="20%">
                                @obj.id
                            </td>
                            <td width="20%">
                                @obj.name
                            </td>
                            <td width="20%">
                                @obj.email
                            </td>
                            <td width="20%">
                                @obj.password
                            </td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@obj.id" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-controller="users" asp-action="Delete" asp-route-id="@obj.id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash3-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>
</div>
</html>